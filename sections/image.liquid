<section class="responsive-image-section">
  <div class="container">
    {%- if section.settings.desktop_image != blank -%}
      {%- if section.settings.mobile_image != blank -%}
        <picture class="responsive-image-wrapper">
          <source 
            media="(max-width: 767px)" 
            srcset="{{ section.settings.mobile_image | image_url: width: 767 }}"
          >
          <img 
            src="{{ section.settings.desktop_image | image_url: width: 1920 }}" 
            alt="{{ section.settings.desktop_image.alt | escape }}"
            width="100%"
            height="auto"
            loading="lazy"
            class="responsive-image"
          >
        </picture>
      {%- else -%}
        <img 
          src="{{ section.settings.desktop_image | image_url: width: 1920 }}" 
          alt="{{ section.settings.desktop_image.alt | escape }}"
          width="100%"
          height="auto"
          loading="lazy"
          class="responsive-image"
        >
      {%- endif -%}
    {%- elsif section.settings.mobile_image != blank -%}
      <img 
        src="{{ section.settings.mobile_image | image_url: width: 1920 }}" 
        alt="{{ section.settings.mobile_image.alt | escape }}"
        width="100%"
        height="auto"
        loading="lazy"
        class="responsive-image"
      >
    {%- else -%}
      {{ 'image' | placeholder_svg_tag: 'placeholder-svg responsive-image' }}
    {%- endif -%}
  </div>
</section>

<style>
  .responsive-image-section {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;
  }
  
  .responsive-image-section .container {
    max-width: var(--container-width, 1200px);
    margin: 0 auto;
    padding: 0 var(--container-padding, 15px);
  }
  
  .responsive-image-wrapper,
  .responsive-image {
    display: block;
    width: 100%;
    height: auto;
  }
  
  .responsive-image-section .placeholder-svg {
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    background: #f5f5f5;
  }

  @media screen and (max-width: 767px) {
    .responsive-image-section {
      padding: {{ section.settings.padding_top_mobile }}px 0 {{ section.settings.padding_bottom_mobile }}px 0;
    }
  }
</style>

{% schema %}
{
  "name": "Responsive Image",
  "tag": "section",
  "class": "responsive-image-section",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image",
      "info": "Recommended size: 1920px width. Shown on screens larger than 767px."
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image",
      "info": "Recommended size: 767px width. Shown on screens 767px and smaller."
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Top padding (mobile)",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "px",
      "label": "Bottom padding (mobile)",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Responsive Image",
      "category": "Image"
    }
  ]
}
{% endschema %}