<section class="about">
  <div class="container">
    <div class="about__card">
      {% for block in section.blocks %}
        {% if block.type == "image" %}
          <div class="col">
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: height: 661 | image_tag }}
            {%- else -%}
              {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
          </div>
        {% elsif block.type == "text" %}
          <div class="col">
            {{ block.settings.text }}

            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: height: 75 | image_tag: class: "signature" }}
            {%- endif -%}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Image with text",
    "blocks": [
      {
        "type": "image",
        "name": "Image",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      },
      {
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p></p>"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image (optional)"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image with text",
        "blocks": [
          {
            "type": "image"
          },
          {
            "type": "text"
          }
        ]
      }
    ]
  }
{% endschema %}