{%- liquid
  assign fetch_priority = 'auto'
  if section.index == 1
    assign fetch_priority = 'high'
  endif
-%}

<section class="hero">
  <div class="container">
    <div class="wrapper">
      <div class="col">
        {% for block in section.blocks %}
          {% if block.type == "title" %}
            {{ block.settings.title }}
          {% elsif block.type == "description" %}
            <p class="hero__text">{{ block.settings.description }}</p>
          {% elsif block.type == "reviews" %}
            <div class="rating">
              {% assign stars = block.settings.stars_number | round %}
              <div class="rating__stars">
                {% for i in (1..stars) %}
                  <svg
                    width="18"
                    height="18"
                    viewBox="0 0 18 18"
                    fill="none"
                    xmlns="http://www.w3.org/2000/svg">
                    <path d="M13.635 15.75L12.4088 10.4782L16.5 6.933L11.1068 6.47025L9 1.5L6.89325 6.47025L1.5 6.933L5.59125 10.4782L4.365 15.75L9 12.954L13.635 15.75Z" fill="#146F60" />
                  </svg>
                {% endfor %}
              </div>
              <p>Excellente {{ block.settings.stars_number | round: 1 }}
                <span>|</span>
                <b>{{ block.settings.text }}</b>
              </p>
            </div>
          {% elsif block.type == "button" %}
            <a href="{{ block.settings.link }}" class="button">{{ block.settings.text }}</a>
          {% endif %}
        {% endfor %}
      </div>
      <div class="col">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: height: 425 | image_tag}}
        {%- else -%}
          {{ 'detailed-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Hero Section",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      }
    ],
    "blocks": [
      {
        "type": "title",
        "name": "Title",
        "limit": 1,
        "settings": [
          {
            "type": "richtext",
            "id": "title",
            "label": "Title",
            "default": "<h1>For explorers and dreamers, our pin travel map turns your journeys into lasting memories.</h1>"
          }
        ]
      },
      {
        "type": "description",
        "name": "Description",
        "limit": 1,
        "settings": [
          {
            "type": "text",
            "id": "description",
            "label": "Description",
            "default": "Every map is crafted with precision, bringing the worldâ€™s details into your home decor."
          }
        ]
      },
      {
        "type": "reviews",
        "name": "Reviews",
        "limit": 1,
        "settings": [
          {
            "type": "range",
            "id": "stars_number",
            "label": "Rating",
            "min": 0,
            "max": 5,
            "step": 0.1,
            "default": 4.8
          },
          {
            "type": "text",
            "id": "text",
            "label": "Gray text",
            "default": "1,320 trusted reviews"
          }
        ]
      },
      {
        "type": "button",
        "name": "Button",
        "limit": 1,
        "settings": [
          {
            "type": "url",
            "id": "link",
            "label": "Button link"
          },
          {
            "type": "text",
            "id": "text",
            "label": "Button text",
            "default": "Shop now"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Section",
        "category": "Sections",
        "blocks": [
          {
            "type": "title"
          },
          {
            "type": "description"
          },
          {
            "type": "reviews"
          },
          {
            "type": "button"
          }
        ]
      }
    ]
  }
{% endschema %}