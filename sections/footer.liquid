                </div>
              {% endif %}
          </div>
        {% elsif block.type == "newsletter" %}
          <div class="footer__col">
              <h5>Newsletter</h5>
              <p class="footer__text visible-mobile">
                {{ block.settings.disclaimer }}
              </p>
            <form method="post" action="/contact" accept-charset="UTF-8" class="news__form">
              <input type="hidden" name="form_type" value="customer">
              <input type="hidden" name="utf8" value="âœ“">
              <input type="email" name="contact[email]" required placeholder="Enter your email">
              <button type="submit" class="button">SUBSCRIBE</button>
            </form>            
          </div>
        {% elsif block.type == "menu" %}          
          <div class="footer__col">
              <nav class="footer__nav">
                <ul class="footer__nav--list">
                  {% for link in block.settings.menu.links %}
                    <li>
                      {{ link.title | link_to: link.url }}
                    </li>
                  {% endfor %}
                </ul>
              </nav>
          </div>
        {% endif %}
      {% endfor %}
  </div>
  <div class="copy">
    {{  "now" | date: '%Y' }} {{ section.settings.copyright }}
  </div>
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "settings": [
    {
      "type": "text",
      "id": "copyright",
      "default": "t:sections.footer.settings.copyright.default",
      "label": "t:sections.footer.settings.copyright.label"
    }
  ],
  "blocks": [
    {
      "type": "info",
      "name": "t:sections.footer.blocks.info.name",
      "settings": [
        {
          "type": "text",
          "id": "description",
          "default": "t:sections.footer.blocks.info.settings.heading.default",
          "label": "t:sections.footer.blocks.info.settings.heading.label"
        },
        {
          "type": "checkbox",
          "id": "show_socials",
          "default": true,
          "label": "t:sections.footer.blocks.info.settings.show_social.label",
          "info": "t:sections.footer.blocks.info.settings.show_social.info"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "t:sections.footer.blocks.newsletter.name",
      "settings": [
        {
          "type": "text",
          "id": "disclaimer",
          "default": "t:sections.footer.blocks.newsletter.settings.disclaimer.default",
          "label": "t:sections.footer.blocks.newsletter.settings.disclaimer.label"
        }
      ]
    },
    {
      "type": "menu",
      "name": "t:sections.footer.blocks.link_list.name",
      "settings": [
        {
          "type": "link_list",
          "id": "menu",
          "label": "t:sections.footer.blocks.link_list.settings.select_menu"
        }
      ]
    }
  ],
  "default": {

  }
}
{% endschema %}
